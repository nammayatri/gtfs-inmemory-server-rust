# OTP Instances Configuration
# Comma-separated list of city-url pairs
# Example: OTP_INSTANCES=city1-http://localhost:8081,city2-http://localhost:8082
OTP_INSTANCES=chennai-http://localhost:8080

# API Server Configuration
GTFS_API_HOST=0.0.0.0
GTFS_API_PORT=8000

# Polling Configuration
GTFS_POLLING_INTERVAL=30
GTFS_PROCESS_BATCH_SIZE=50

# Retry Configuration
GTFS_MAX_RETRIES=3
GTFS_RETRY_DELAY=5
GTFS_RATE_LIMIT_DELAY=0.1

# Performance Configuration
GTFS_CPU_THRESHOLD=80.0
GTFS_MEMORY_THRESHOLD=5000
GTFS_CONNECTION_LIMIT=100
GTFS_DNS_TTL=300

# Garbage Collection
GTFS_GC_INTERVAL=300

# Logging
RUST_LOG=info
